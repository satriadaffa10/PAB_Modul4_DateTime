<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <EditText android:id="@+id/tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:hint="Set Tanggal Lahir"
        android:onClick="setTanggal"
        android:padding="20dp" />
    <EditText android:id="@+id/waktu" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:focusableInTouchMode="false"
        android:hint="Set Waktu Lahir" android:onClick="setWaktu"
        android:padding="20dp" />
</LinearLayout>